{
  "name": "lakehouse-unplugged-dev",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspace",
  "remoteUser": "root",

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteEnv": {
    "DOCKER_HOST": "unix:///var/run/docker.sock",
    "SPARK_MASTER": "spark://spark-master:7077",
    "MINIO_ENDPOINT": "http://minio:9000",
    "POLARIS_URI": "http://polaris:8181",
    "DBT_PROFILES_DIR": "/workspace/dbt",
    "POLARIS_CLIENT_ID": "${localEnv:POLARIS_CLIENT_ID}",
    "POLARIS_CLIENT_SECRET": "${localEnv:POLARIS_CLIENT_SECRET}"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "innoverio.vscode-dbt-power-user",
        "ms-azuretools.vscode-docker",
        "ms-python.vscode-pylance",
        "mtxr.sqltools"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "upgradePackages": true
    }
  },

  "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/setup.sh",
  "postStartCommand": "bash ${containerWorkspaceFolder}/.devcontainer/verify.sh",
  "shutdownAction": "stopCompose"
}
